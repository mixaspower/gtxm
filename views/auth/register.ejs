    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.querySelector('.register-form form');
            const messageBox = document.getElementById('message-box');
            const loader = document.getElementById('loader');
            const overlay = document.getElementById('overlay');

            form.addEventListener('submit', async (event) => {
                event.preventDefault(); // Prevent default form submission

                // Clear any existing messages
                messageBox.style.display = 'none';
                messageBox.textContent = '';

                // Gather form data
                const formData = new FormData(form);
                const data = {
                    email: formData.get('email'),
                    password: formData.get('password'),
                    confirmPassword: formData.get('confirm-password'),
                    refCodeInvitedBy: formData.get('referral-code') || null,
                };

                // Validate client-side before sending to the server
                if (data.password !== data.confirmPassword) {
                    messageBox.textContent = 'Οι κωδικοί δεν ταιριάζουν.';
                    messageBox.style.display = 'block';
                    return;
                }

                try {
                    showLoader();
                    // Send the request to the server
                    const response = await fetch('/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            email: data.email,
                            password: data.password,
                            refCodeInvitedBy: data.refCodeInvitedBy,
                        }),
                    });

                    hideLoader();
                    const result = await response.json();

                    if (response.ok) {
                        // On success, redirect the user
                        window.location.href = result.redirectUrl;
                    } else {
                        // On error, display the error message
                        messageBox.textContent = result.error || 'Κάτι πήγε στραβά. Παρακαλώ δοκιμάστε ξανά.';
                        messageBox.style.display = 'block';
                    }
                } catch (error) {
                    // Handle network errors or unexpected issues
                    messageBox.textContent = 'Αποτυχία σύνδεσης με τον διακομιστή. Παρακαλώ δοκιμάστε αργότερα.';
                    messageBox.style.display = 'block';
                    console.error('Registration error:', error);
                } finally {
                    // Hide the loader
                    loader.style.display = 'none';
                    overlay.style.display = 'none';
                }
            });
        });


        function showLoader() {
        document.getElementById('loading-overlay').style.display = 'flex';
    }

    function hideLoader() {
        document.getElementById('loading-overlay').style.display = 'none';
    }
